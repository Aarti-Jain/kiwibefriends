<% provide(:title, @restaurant.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class='restaurant-profile-aside'>
      <%= render @restaurant %>
      <section class="stats">
        <%= render 'shared/restaurant_stats' %>
      </section>
      <div>
        <%= render 'follow_form' if logged_in? %>
      </div>
    </section>
    <section class="top-three">
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=345x300&markers=size:large%7Ccolor:red%7C#{@restaurant.latitude},#{@restaurant.longitude}&key=#{Rails.application.credentials.google_maps_api_key}", alt: "Map" %>
      <hr>
      <a class="btn btn-primary btn-block" href="/restaurants" role="button">Learn More</a>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @restaurant.microposts.any? %>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
</div>