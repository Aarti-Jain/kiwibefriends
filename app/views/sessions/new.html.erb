<% provide(:title, "Log in") %>
<h1 class="m-1"></h1>
<div id="login-row" class="row">
  <div class="col-md-6 text-center">
    <div class="row m-5">
      <%= link_to image_tag("kiwi.PNG", alt: "Rails logo", width: "300")%>
    </div>
    <div class="row">
      <h1>Kiwi be Friends</h1>
    </div>
    <div class="row p-10">
      <h4>Share your favorite restaurants with friends!</h4>
    </div>
  </div>
  <div id="login-form" class="col-md-6">
    <%# using h1 for margin %>
    <h1></h1> 
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>

      <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-warning btn-md btn-block" %>
    <% end %>

    <hr id="sign-up-line">

    <%= link_to "Sign up now!", signup_path, class: "btn btn-success btn-md btn-block" %>
  </div>
</div>
