<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <a href="<%= restaurant_following_user_path(@user) %>">
    <strong id="restaurant_following" class="stat">
      <%= @user.restaurant_following.count %>
    </strong>
    restaurants
  </a>
</div>