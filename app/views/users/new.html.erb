<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h6 id="sign-up-word"><b>Sign Up</b><h6>
    <h6 id="sign-up-desc">It's quick and easy.</h6>
    <hr id="sign-up-line">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.text_field :name, placeholder: "Full Name", class: 'form-control' %>

      <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>

      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>

      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'form-control' %>

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <%= f.submit "Sign Up", class: "btn btn-success btn-md" %>
        </div>
        <div class="col-md-2"></div>
      </div>
    <% end %>
  </div>
</div>
