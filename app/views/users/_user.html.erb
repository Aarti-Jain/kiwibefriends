<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <h6>Followers: <%= user.followers.count %></h6>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, data: { "turbo-method": :delete,
                                          turbo_confirm: "You sure?" } %>
  <% end %>
</li>